@model MyMDB.Models.MediaFile

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MediaFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Created" />
            <input type="hidden" asp-for="ContentType" />
            <input type="hidden" asp-for="Data" />

            @if (Model.Data != null)
            {
                <div class="row mt-3">
                    <div class="col">
                        <img class="img-fluid" src="data:@Model.ContentType;base64, @Convert.ToBase64String(Model.Data)" alt="Document" />
                    </div>
                </div>
            }

            @Html.EditorForModel()

            <!-- Modal Triggers -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addCastCrewMemberModal">
                Add Cast/Crew Member
            </button>

            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#addCharacterModal">
                Add Character
            </button>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<!-- Add Character Modal -->
<div class="modal fade" id="addCharacterModal" tabindex="-1" aria-labelledby="addCharacterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCharacterModal">Add Character</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Character Modal -->
<div class="modal fade" id="addCastCrewMemberModal" tabindex="-1" aria-labelledby="addCastCrewMemberModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCastCrewMemberModal">Add Cast/Crew Member</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
