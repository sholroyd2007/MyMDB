@model Episode
<input type="hidden" asp-for="Created" />
<input type="hidden" asp-for="Edited" value="@DateTime.UtcNow" />
<input type="hidden" asp-for="Deleted" />

<div class="form-group">
    <label asp-for="TVShowId">TV Show</label>
    <select class="form-control os-dropdown" asp-for="TVShowId">
        <option value=""></option>
        @foreach (var item in await TVService.GetAllTVShows())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="SeriesNumber" class="control-label"></label>
    <input asp-for="SeriesNumber" class="form-control" />
    <span asp-validation-for="SeriesNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="EpisodeNumber" class="control-label"></label>
    <input asp-for="EpisodeNumber" class="form-control" />
    <span asp-validation-for="EpisodeNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="AirDate" class="control-label"></label>
    <input asp-for="AirDate" type="date" class="form-control" />
    <span asp-validation-for="AirDate" class="text-danger"></span>
</div>


