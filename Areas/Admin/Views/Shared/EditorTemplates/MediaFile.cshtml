@model MediaFile

<label for="file">Upload Image</label>
<div class="col-sm-8 col-md-6 mb-3">
    <input type="file"
           id="file"
           name="file"
           accept="image/png, image/jpeg, image/gif"
           class="form-control">
</div>

<div class="form-group">
    <label asp-for="MovieId">Movie</label>
    <select class="form-control" asp-for="MovieId" id="Movie">
        <option value=""></option>
        @foreach (var item in await MovieService.GetAllMovies())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>

