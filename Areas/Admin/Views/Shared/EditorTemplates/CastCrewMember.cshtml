@model CastCrewMember
<input type="hidden" asp-for="Created" />
<input type="hidden" asp-for="Edited" value="@DateTime.UtcNow" />
<input type="hidden" asp-for="Deleted" />

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="DOB" class="control-label"></label>
    <input type="date" asp-for="DOB" class="form-control" />
    <span asp-validation-for="DOB" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Died" class="control-label"></label>
    <input type="date" asp-for="Died" class="form-control" />
    <span asp-validation-for="Died" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="From" class="control-label"></label>
    <input asp-for="From" class="form-control" />
    <span asp-validation-for="From" class="text-danger"></span>
</div>


