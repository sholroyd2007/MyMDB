@model Character

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="CastCrewMemberId">Cast/Crew Member</label>
    <select class="form-control os-dropdown" asp-for="CastCrewMemberId">
        <option value=""></option>
        @foreach (var item in await MyMDBService.GetAllCastCrewMembers())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="EpisodeId">Episode</label>
    <select class="form-control os-dropdown" asp-for="EpisodeId">
        <option value=""></option>
        @foreach (var item in await MyMDBService.GetAllEpisodes())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="MovieId">Movie</label>
    <select class="form-control os-dropdown" asp-for="MovieId">
        <option value=""></option>
        @foreach (var item in await MyMDBService.GetAllMovies())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>

