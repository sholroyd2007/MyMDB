@model TVShow

<div class="form-group">
    <label asp-for="CreatorId">Creator</label>
    <select class="form-control os-dropdown" asp-for="CreatorId">
        <option value=""></option>
        @foreach (var item in await MyMDBService.GetAllCastCrewMembers())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <input class="form-check" type="checkbox" asp-for="Active" />
    <label class="form-check-label" asp-for="Active ">Active?</label>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Language" class="control-label"></label>
    <input asp-for="Language" class="form-control" />
    <span asp-validation-for="Language" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Website" class="control-label"></label>
    <input asp-for="Website" class="form-control" />
    <span asp-validation-for="Website" class="text-danger"></span>
</div>