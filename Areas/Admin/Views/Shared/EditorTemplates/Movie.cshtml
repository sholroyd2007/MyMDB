@model Movie

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Tagline" class="control-label"></label>
    <input asp-for="Tagline" class="form-control" />
    <span asp-validation-for="Tagline" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Length" class="control-label"></label>
    <input asp-for="Length" class="form-control" />
    <span asp-validation-for="Length" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="BoxOffice" class="control-label"></label>
    <input asp-for="BoxOffice" class="form-control" />
    <span asp-validation-for="BoxOffice" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Budget" class="control-label"></label>
    <input asp-for="Budget" class="form-control" />
    <span asp-validation-for="Budget" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Release" class="control-label"></label>
    <input asp-for="Release" type="date" class="form-control" />
    <span asp-validation-for="Release" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="MovieStudioId">Movie Studios</label>
    <select class="form-control os-dropdown" asp-for="MovieStudioId">
        <option value=""></option>
        @foreach (var item in await MovieService.GetAllMovieStudios())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>

<div class="form-group">
    <input class="form-check" type="checkbox" asp-for="Recommended" />
    <label class="form-check-label" asp-for="Recommended ">Recommended?</label>
</div>
<div class="form-group">
    <label asp-for="Language" class="control-label"></label>
    <input asp-for="Language" class="form-control" />
    <span asp-validation-for="Language" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Website" class="control-label"></label>
    <input asp-for="Website" class="form-control" />
    <span asp-validation-for="Website" class="text-danger"></span>
</div>