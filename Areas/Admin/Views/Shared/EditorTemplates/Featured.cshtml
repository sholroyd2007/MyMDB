@model Featured

<div class="form-group">
    <label asp-for="MovieId">Movie</label>
    <select class="form-control" asp-for="MovieId" id="Movie">
        <option value=""></option>
        @foreach (var item in await MovieService.GetAllMovies())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="TVShowId">TV Show</label>
    <select class="form-control" asp-for="TVShowId" id="TVShow">
        <option value=""></option>
        @foreach (var item in await TVService.GetAllTVShows())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Deleted" /> @Html.DisplayNameFor(model => model.Deleted)
    </label>
</div>

<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Banner" /> @Html.DisplayNameFor(model => model.Banner)
    </label>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Recommended" /> @Html.DisplayNameFor(model => model.Recommended)
    </label>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="EditorPick" /> @Html.DisplayNameFor(model => model.EditorPick)
    </label>
</div>