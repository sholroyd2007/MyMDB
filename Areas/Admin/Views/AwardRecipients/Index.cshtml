@model IEnumerable<MyMDB.Models.AwardRecipient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="mymdb-datatable">
    <thead>
        <tr>
            <th></th>
            <th>Award</th>
            <th>Category</th>
            <th>Recipient</th>
            <th>Year</th>
            <th>Win?</th>
            <th>Created</th>
            <th>Edited</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Id
                </td>
                <td>
                    @item?.Award?.Name
                </td>
                <td>
                    @item?.AwardCategory?.Name
                </td>
                <td>
                    @(item.MovieId != null ? $"{@item?.Movie?.Name}" : "")
                    @(item.CastCrewMemberId != null ? $"{@item?.CastCrewMember?.Name}" : "")
                    @(item.TVShowId != null ? $"{@item?.TVShow?.Name}" : "")
                    @(item.EpisodeId != null ? $"{@item?.Episode?.Name}" : "")
                </td>
                <td>
                    @item.Year
                </td>
                <td>
                    @(item.Win == true ? "Winner" : "Nominee")
                </td>
                <td>
                    @item.Created.ToString("dd MMM yyyy")
                </td>
                <td>
                    @item.Edited?.ToString("dd MMM yyyy")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

