@model IEnumerable<MyMDB.Models.Episode>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="mymdb-datatable">
    <thead>
        <tr>
            <th></th>
            <th>Show</th>
            <th>Series</th>
            <th>Episode</th>
            <th>Name</th>
            <th>Created</th>
            <th>Edited</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Id
                </td>
                <td>
                    @item?.TVShow?.Name
                </td>
                <td>
                    @item.SeriesNumber
                </td>
                <td>
                    @item.EpisodeNumber
                </td>
                 <td>
                    @item.Name
                </td>
                <td>
                    @item.Created
                </td>
                <td>
                    @item.Edited
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>