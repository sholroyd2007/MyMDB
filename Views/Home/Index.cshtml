@model HomePageViewModel
@{
    ViewData["Title"] = "MyMDB Home";
}

<div class="container">
    <partial name="_RecommendedMovies" for="@Model.RecommendedMovies" />
</div>




@section Scripts{
<script>
    $(document).ready(function () {
    $('#RecommendedMoviesCarousel').owlCarousel({
        loop: true,
        margin: 10,
        nav: true,
        responsive: {
            0: {items: 1},
            600: {items: 2},
            1000: {items: 3}
            }
        })
    })
</script>
}